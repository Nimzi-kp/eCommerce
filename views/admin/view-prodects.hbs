<section>
  <div class="container">
    <div class="row mt-4 col-2 mt-3">
      <a href="/admin/add-products" class="btn btn-success btn-sm">Add item</a>
    </div>
    <div class="col-md-12 row mt-5">
    <table id="view-admin-table" class="table mt-2">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">title</th>
          <th scope="col">category</th>
          <th scope="col">price</th>
          <th scope="col">discription</th>
          <th scope="col">image</th>
          <th scope="col">Option</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <th scope="row">{{@index}}</th>
          <td>{{this.title}}</td>
          <td>{{this.category}}</td>
          <td>{{this.price}}</td>
          <td>{{this.discription}}</td>
          <td><img src="/product-img/{{this._id}}.jpg" style="width: 50px; height: 50px;" alt=""></td>
          <td>
            <a href="/admin/edit-product/{{this._id}}"class="btn btn-primary">Edit</a>
            <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('are you want to delete {{this.name}} ?')">Delete</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    </div>
  </div>
</section>

<script> 
  $(document).ready(function() { 
    $('#view-admin-table').DataTable({
      "order": [[0, "asc"]],
      "columnDefs": [ { 
        "orderable": false, "targets": [5, 6] } 
      ] 
    }); 
  });
</script>