<section>
    <div class="container mt-5">
        <div class="row">
            {{#each products}}

            <div class="col-md-3 p-3">
                <div class="card" style="width: 15rem; height: 24rem;">
                    <img class="card-img-top"
                        src="/product-img/{{this._id}}.jpg" 
                        alt="Card image cap"
                        style="height: 13rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{this.title}}</h5>
                        <p class="card-text">Rs.{{this.price}}</p>
                        <p class="card-text">{{this.discription}}</p>
                        <button class="btn btn-primary" onclick="addToCart('{{this._id}}')">Add to cart</button>
                    </div>
                </div>
            </div>
            {{/each}}

        </div>
    </div>
</section>