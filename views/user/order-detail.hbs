<section>
  <div class="border border-black border-2 rounded rounded-5 m-5">
    <div class="pt-5 pe-5 ps-5">
      <div class="p-3 border-bottom border-black">
        <h2><b>Order Details</b></h2>
      </div>
    </div>

    <div class="p-3 ms-5 me-5 row">
      <div class="col-md-4 p-5 rounded rounded-5" style="background: rgb(237, 220, 187); height: fit-content;">
        <div class="border-bottom border-black p-3">
          <h6><b>Order ID: </b>{{orderDetails._id}}</h6>
          <h6><b>Order Status: </b>{{orderDetails.status}}</h6>
        </div>
        <div class="border-bottom border-black p-3">
          <h6><b>Date: </b>{{formatDate orderDetails.date}}</h6>
          <h6><b>Payment Method: </b>{{orderDetails.paymentMethod}}</h6>
        </div>
        <div class="border-bottom border-black p-3">
          <h5><b>Shipping Details:</b></h5>
          <p><b>Mobile:</b> {{orderDetails.deliveryDetails.mobile}}</p>
          <p><b>Address:</b> {{orderDetails.deliveryDetails.address}}</p>
          <p><b>Pincode:</b> {{orderDetails.deliveryDetails.pincode}}</p>
        </div>
      </div>

      <div class="col-md-8 p-3">
        <h5><b>Order Items:</b></h5>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Product Name</th>
              <th scope="col">Quantity</th>
              <th scope="col">Price</th>
              <th scope="col">Total</th>
            </tr>
          </thead>
          <tbody>
            {{#each orderDetails.products}}
            <tr>
              <td>{{this.item.title}}</td>
              <td>{{this.quantity}}</td>
              <td>₹{{this.item.price}}</td>
              <td>₹{{multiply this.quantity this.item.price}}
            </tr>
            {{/each}}
          </tbody>
        </table>
        <h5><b>Total Amount:</b> ₹{{orderDetails.totalAmount}}</h5>
      </div>
    </div>

    <div class="p-5">
      <h6><a href="/orders" class="text-black">Back to Orders</a></h6>
    </div>
  </div>
</section>