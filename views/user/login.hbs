<div class="row">
  <div class="container mt-5">
    <div class="col-md-6 float-start ">
      <div class="text-center">
        <div class="mt-4">
          <img src="https://i.postimg.cc/VksnsV64/logo.png" class="img img-fluid" style="height: 20rem;" alt="Phone image">
        </div>
      </div>
    </div>
    <div class="col-md-6 float-start my-auto">
      <div class="ps-3 pe-3 pt-5 mt-5">
        <h2 class="text-center">Login</h2>
        <form onsubmit="return loginValidate()" action="/login" method="post">
          <p class="error ms-5">{{loginErr}}</p>

          <div class="form-group ms-5 me-5 mt-3">
            <input type="email" id="lEmail" class="form-control border-2 border-dark" name="Email" placeholder="Email Address">
            <div class="error" id="lEmailErr"></div>
          </div>
          <div class="form-group ms-5 me-5 mt-3">
            <input type="password" id="lPassword" name="Password" class="form-control border-2 border-dark" placeholder="Password">
            <div class="error" id="lPassErr"></div>
          </div>
          <div class="ms-5 me-5 mt-1">
            <p>Do you have no account? <a href="/signup" class="text-start">Click here</a></p>
          </div>
          <div class="d-grid">
            <button type="submit" class="btn btn-success ms-5 me-5">Login</button>
          </div>
          <div class="ms-5 mt-2">
            <a href="/forget-Password">Forgot Password</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<style>
    .error{
        color: rgb(253, 52, 52);
    }
</style>

<script src="/javascripts/validate.js"></script>
